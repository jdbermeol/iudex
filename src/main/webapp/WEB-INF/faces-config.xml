<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{signUp.signUp}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/registrationComplete.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{signUp.signUp}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{authCheck.login}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{authCheck.login}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
	<from-view-id>/courses/view.xhtml</from-view-id>
	<navigation-case>
		<from-outcome>notfound</from-outcome>
		<to-view-id>/notfound.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
    <navigation-rule>
	<from-view-id>/subjects/view.xhtml</from-view-id>
	<navigation-case>
		<from-outcome>notfound</from-outcome>
		<to-view-id>/notfound.xhtml</to-view-id>
	</navigation-case>
    </navigation-rule>
</faces-config>
